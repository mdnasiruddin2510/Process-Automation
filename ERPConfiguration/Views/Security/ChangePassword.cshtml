@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ProcessAutomation.Models.LocalPasswordModel

<link href="~/App_Themes/Theme1/plugins/datatables/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
<link href="~/Css/FormDesign.css" rel="stylesheet" />

@using (Html.BeginForm("UserPasswordChange", "SecUserLogin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal m-t-20", role = "form" }))
{
    @Html.AntiForgeryToken()
    @*@Html.ValidationSummary()*@

    <div class="row form-horizontal">
        <div class="col-lg-1"></div>
        <div class="col-sm-10">
            <div class="card-box">
                @*<p style="color:red;">@ViewBag.Message</p>
            <br />*@
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        @Html.LabelFor(x => x.OldPassword, new { @class = "col-md-5 control-label" })
                        <div class="col-md-7">
                            @Html.PasswordFor(x => x.OldPassword, new { @class = "form-control" , @Value = ViewBag.OldPassword})
                            @Html.ValidationMessageFor(x => x.OldPassword)
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        @Html.LabelFor(x => x.NewPassword, new { @class = "col-md-5 control-label" })
                        <div class="col-md-7">
                            @Html.PasswordFor(x => x.NewPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.NewPassword)
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        @Html.LabelFor(x => x.ConfirmPassword, new { @class = "col-md-5 control-label" })
                        <div class="col-md-7">
                            @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.ConfirmPassword)
                        </div>
                    </div>
                </div>
            </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <div class="input-group">

                            <p style="color:red">
                                @{
                                    if (ViewBag.Message == "0")
                                    {
                                        ViewBag.Message = "Password Update Error";
                                    }
                                    else if(ViewBag.Message == "1")
                                    {
                                        ViewBag.Message = "Password Updated Successfuly";
                                    }
                                    else if(ViewBag.Message == "2")
                                    {
                                        ViewBag.Message = "Nothing to Update";
                                    }
                                        }
                                @ViewBag.Message
                            </p>
                        </div>
                    </div>
                </div>
            <div class="row">
                <div class="col-md-6" style="text-align:center;">
                    <div class="form-group">
                        <input type="submit" value="Change Password" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}

