<body>

    <div class="wrapper-page">
        <div class="text-center">
            <a href="" class="logo-lg"><img src="@Url.Content("~/Images/Basic/logo.gif")" style="height:100px;width:200px;border-radius:25px;" /><span><h5>Bangladesh Post Office E-Commerce Service</h5></span></a>
        </div>
        @using (Html.BeginForm("RecoverPass", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            <div class="row form-horizontal">
               
                <div class="col-sm-12">
                    <div class="card-box">
                        <p style="color:red;">@ViewBag.Message</p>
                        <br />
                     <input type="hidden" name="token" value="@ViewBag.token" id="token"/>
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    @Html.LabelFor(x => x.NewPassword, new { @class = "col-md-5 control-label" })
                                    <div class="col-md-7">
                                        @Html.PasswordFor(x => x.NewPassword, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.NewPassword)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    @Html.LabelFor(x => x.ConfirmPassword, new { @class = "col-md-5 control-label" })
                                    <div class="col-md-7">
                                        @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.ConfirmPassword)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6" style="text-align:center;">
                                <div class="form-group">
                                    <input type="submit" value="Change Password" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

