    <script>
        $(document).ready(function () {
            $("#btnupdate").hide();
            $("#btnadd").show();
            Addindatatable();
            function Addindatatable() {
                var table = $("#Add-datatable").DataTable({
                    "scrollX": true,
                    "scrollY": 200,
                    //"paging": false,
                    "ordering": false,
                    //"info": false,
                    //"searching": false,
                    "ajax": "../AdjustmentReasonSet/GetAllDataForAdjReason",
                    "columns": [
                               { "data": null, "bSortable": false },
                               { "data": "Name" },
                               { "data": "Accode" },
                                { "data": "Active" },
                                
                               {
                                   mRender: function (data, type, row) {
                                       return '<a href="#" id="edit"  value="' + row.Accode + '">'
                                               + '<span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>&ensp;'
                                       + '<a href="#" class="on-default remove-row deleteSup largeSpace" data-id="1" id="delete" value="' + row.Accode + '">'
                                       + ' <i class="glyphicon glyphicon-trash"></i> </a>'
                                   }
                               },
                    ],
                    "fnCreatedRow": function (row, data, index) {
                        $('td', row).eq(0).html(index + 1);
                    }


                });
            }
            var DefACId;
            //Addindatatable();
            //$(document).on("click", "#BankAc", function () {
            //    $("#JobModal").modal("show");
            //});
            var id = "";
            $(document).on("keydown", "#Name", function (e) {
                if (e.which == 13 || e.which == 9) {
                    id = $(this).attr('id');
                    $("#JobModal").modal("show");
                }                
            });

            $(document).on("click", "#closeJob", function (e) {
                e.preventDefault();
                $('#JobModal').modal('hide');
            });

           // $("#SaleNo").on("keydown keyup", function () 
            $(document).on("click", " #btnJobOk", function (e) {
               // AcName = $("#Accode option:selected").val()
                $('#' + id).val($("#Code option:selected").text()); 
                $("#Accode").val($("#Code option:selected").val());
                $('#JobModal').modal('hide');
                $("#Code").val($('#Code option:first-child').val()).trigger('change.select2');

            });
    

            /////////////////Save////////////////////////

            var loadInfo = {
                Name: "",
                Accode: "",
                Active: "",               
                Action: ""

            };
            function setOrder() {
                loadInfo.Name = $("#Name").val();
                loadInfo.Accode = $("#Accode").val();
                loadInfo.Active = $("#Active").val();
             

            }

            function clearReceive() {
                $("#Name").val();
                $("#Accode").val();
                $("#Active").val($('#Active option:first-child').val()).trigger('change.select2');
               

                //$("#BranchType").val($('#BranchType option:first-child').val()).trigger('change.select2');
            }

            $(document).on("click", "#btnadd", function () {
                setOrder();
                var validate = validateOnSave(loadInfo);
                if (validate != "") {
                    alert(validate);
                    return;
                }
                // if (orders != 0) {
                $.ajax({
                    url: '@Url.Action("SaveAdjReason", "AdjustmentReasonSet")',
                    contentType: "application/json;charset=utf-8",
                    data: JSON.stringify({ AdjReason: loadInfo }),
                    type: 'POST',
                    dataType: 'json',
                    success: function (datas) {

                        if (datas == 1) {
                            swal({
                                title: "Ok",
                                text: "Successfully Saved!",
                                type: "success",
                                closeOnConfirm: true

                            },

                            function () {
                                location.reload();
                                clearReceive();
                            });
                            //$("#btnadd").prop("disabled", false);
                            //orders = [];
                            //$('#tbodyId').empty();


                        }
                        else if (datas == "X") {
                            swal({
                                title: "Sorry",
                                text: "No Save Permission for this User",
                                type: "warning"
                            });
                        }
                        else if (datas == 0) {
                            swal(
                                'Sorry!',
                                'All (*) field are required. These Fields can not be empty!!!',
                                'warning'
                            );
                            $("#save").prop("disabled", false);
                        }
                        else if (datas == 2) {                           //save  data
                            swal({
                                title: "Sorry!",
                                text: "Data Already Exists",
                                type: "warning"
                            });
                        }

                            //});

                            //}
                        else {
                            swal(
                                'Sorry!',
                                'Please Add item in the Table.!!!',
                                'warning'
                                );
                        }
                    }//success
                });//ajax
                // }//if (orders != 0) {

            });

            function validateOnSave(validOrder) {

                if (!validOrder.Name.trim().length) {
                    return "Please select an Account.";
                }
                if (!validOrder.Active.trim().length) {
                    return "Please write the Active status.";
                }

                return "";
            }

            ///////////////////////////Edit//////////////////

            $(document).on('click', "#edit", function () {
                var value = $(this).attr("value");
                Accode = value;
                //GroupTypeId = $("#GroupTypeId option:selected").val()
                //$("#update").show();
                $.ajax({
                    url: '@Url.Action("AdjReasonforEdit", "AdjustmentReasonSet")',
                    contentType: "application/json;charset=utf-8",
                    data: JSON.stringify({ Accode: value }),
                    type: 'POST',
                    dataType: 'json',
                    success: function (datas) {
                        //GroupTypeId = GroupTypeId;

                        $("#Name").val(datas.Name);
                        $("#Accode").val(datas.Accode);
                      
                        $("#Active").val(datas.Active).trigger('change.select2');
                        $("#btnupdate").show();
                        $("#btnadd").hide();
                        //$("#Type").val($('#Type option:first-child').val()).trigger('change.select2');
                    }
                });
            });
            ////////////////////////Update//////////////////////////////////
            $(document).on("click", "#btnupdate", function () {
                //  ActionCtrl = $("#AcName").val();         
                //SrcDestName = $("#SrcDestName").val();  
                // $("#btnupdate").hide();
                //$("#btnadd").show();

                setOrder();
                //var validate = validateOnSave(loadInfo);
                //if (validate != "") {
                //    alert(validate);
                //    return;
                //}
                // if (orders != 0) {
                $.ajax({
                    url: '@Url.Action("UpdateAdjReason", "AdjustmentReasonSet")',
                    contentType: "application/json;charset=utf-8",
                    data: JSON.stringify({ AdjReason: loadInfo, Accode: Accode }),
                    type: 'POST',
                    dataType: 'json',
                    success: function (datas) {
                        if (datas == 1) {


                            swal({
                                title: "Ok",
                                text: "Successfully Updated!",
                                type: "success",
                                closeOnConfirm: true
                            },

                            function () {
                                location.reload();
                                clearReceive();
                                //loadGroupWiseData();
                            });

                        }

                        else if (datas == "X") {
                            swal({
                                title: "Sorry",
                                text: "No Update Permission for this User",
                                type: "warning"
                            });
                        }
                        else if (datas == 0) {
                            swal(
                                'Sorry!',
                                'All (*) field are required. These Fields can not be Empty!!!',
                                'warning'
                            );
                            $("#save").prop("disabled", false);
                        }
                        else if (datas == 2) {                           //save  data
                            swal({
                                title: "Sorry!",
                                text: "Data Already Exists",
                                type: "warning"
                            });
                        }

                            //});

                            //}
                        else {
                            swal(
                                'Sorry!',
                                'Please Add item in the Table.!!!',
                                'warning'
                                );
                        }
                    }//success
                });//ajax
                //}//if (orders != 0) {

            });

            /////////////////////////////delete//////////////////////
            $(document).on("click", "#delete", function () {
                var value = $(this).attr("value");
                // GroupTypeId = $("#GroupTypeId option:selected").val()
                swal({
                    title: "Are you sure?",
                    text: "You will not be able to recover this data!",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
                    confirmButtonText: "Yes, delete it!",
                    closeOnConfirm: false,
                    closeOnCancel: true
                },
                    function () {
                        $.ajax({
                            url: '@Url.Action("DeleteAdjReason", "AdjustmentReasonSet")',
                            contentType: "application/json;charset=utf-8",
                            data: { Accode: value },
                            type: 'GET',
                            dataType: 'json',
                            success: function (datas) {

                                if (datas == 0 || datas == 2) {
                                    swal("Sorry!! Failed to delete this data.", "fail");
                                }
                                else if (datas == 1) {
                                    swal({
                                        title: "Ok",
                                        text: "Sucessfully Delete!",
                                        type: "success",
                                        closeOnConfirm: true

                                    }, function () {
                                        //clearReceive();
                                        // loadGroupWiseData();
                                        location.reload();
                                    });
                                }
                                else if (datas == "D") {

                                    swal({
                                        title: "Sorry",
