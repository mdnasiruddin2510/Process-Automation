@model App.Domain.ExcOfficeReceive

<div class="modal fade" id="Addmodal" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Exchange Office Receive</h4>
            </div>
            <div class="modal-body form-horizontal ">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row" id="rptshow">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    <div class="form-group">
                                        @Html.LabelFor(x => x.RcvTo, new { @class = "col-md-3 control-label" })
                                        <div class="col-sm-8">
                                            @Html.DropDownListFor(x => x.RcvTo, null, "Select Post Office", new { @class = "form-control col-sm-5", required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(x => x.RcvNo, new { @class = "col-md-3 control-label" })
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(x => x.RcvNo, new { @class = "form-control col-sm-5", disabled = "disabled" })
                                        </div>
                                    </div>
                                   
                                    <div class="form-group">
                                        
                                        <div class=" col-sm-12">
                                            @Html.LabelFor(x => x.RcvDate, new { @class = "col-md-3 control-label" })
                                            <div class="col-sm-9">
                                                <div class="input-group">
                                                    <input type="text" class="form-control" placeholder="mm/dd/yyyy" id="@Html.IdFor(x => x.RcvDate)">
                                                    <span class="input-group-addon bg-primary b-0 text-white"><i class="ion-calendar"></i></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(x => x.RcvForm, new { @class = "col-md-3 control-label" })
                                        <div class="col-sm-8">
                                           @Html.DropDownListFor(x => x.RcvForm, null, "Select Post Office", new { @class = "form-control col-sm-5", required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(x => x.BagNo, new { @class = "col-md-3 control-label" })
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(x => x.BagNo, new { @class = "form-control col-sm-5", required = "required", data_parsley_Maxlength = "2", data_parsley_minlength = "2", type = "number", palceholder = "" })
                                        </div>
                                       
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(x => x.DocNo, new { @class = "col-md-3 control-label" })
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(x => x.DocNo, new { @class = "form-control col-sm-5", required = "required", data_parsley_Maxlength = "2", data_parsley_minlength = "2", type = "number", palceholder = "" })
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="col-sm-3"></div>
                                            <div class="col-sm-6">
                                                <div class="checkbox checkbox-primary">
                                                    <input id="@Html.IdFor(x=>x.IsReturned)" type="checkbox">
                                                    <label for="IsReturned">
                                                        Is Returned
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-1"></div>
                </div>
                <div class="row">
                    <table>
                        <thead>
                            <tr>
                                <th>SL.</th>
                                <th>Documnet No</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-info waves-effect waves-light" id="add">Add</button>
                <button type="submit" class="btn btn-info waves-effect waves-light" id="add">Add & Close Window</button>
            </div>

        </div>
    </div>

</div>
