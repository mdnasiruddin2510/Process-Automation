@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-color panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <text style="text-align:left !important;text-decoration:none;" id="Title">Purchase Order</text>
                    </h3>
                </div>
            </div>
            <fieldset>
                <div class="col-md-12" id="purOrder">
                    <div class="col-md-6">
                        <label class="col-md-4" id="lblHasBranch">Purchase Order #1001</label>
                    </div>
                    <div class="col-md-6" style="text-align:right">
                        <span>
                            <i class=" fa fa-gear" style="font-size:15px;color:black;margin-top:2px;">
                            </i>
                        </span>
                        <span><i class="fa fa-question-circle" style="font-size:15px;color:black;margin-top:2px;"></i> </span>
                        <span><i class="fa fa-times-circle" style="font-size:15px;color:black;margin-top:2px;"></i> </span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-6">
                        <div class="col-md-3">
                            <label class="col-md-6" id="lblHasBranch">Vendor</label>
                            <div class="input-group form-group col-md-8">
                                <input type="text" id="JobCaption" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="col-md-6" id="lblHasBranch">Email</label>
                            <div class="input-group form-group col-md-8">
                                <input type="text" id="JobCaption" class="form-control" />
                            </div>
                        </div>
                    </div> 
                    <div class="col-md-6" style="text-align:right">
                        <div class="col-md-12">
                            <label id="lblHasBranch">AMOUNT</label>
                            <div class="col-md-12">
                                <label  id="lblHasBranch">TK 0.00</label>
                            </div>
                        </div>
                    </div>                    
                </div>
                <div class="col-md-12">
                    <div class="col-md-6">
                        <div class="col-md-3">
                            <label class="col-md-6" id="lblHasBranch">Mailing Address</label>
                            <div class="input-group form-group col-md-12">
                                <input type="text" id="JobCaption" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="col-md-6" id="lblHasBranch">Ship to</label>
                            <div class="input-group form-group col-md-12">
                                <input type="text" id="JobCaption" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="col-md-3">
                            <label class="col-md-6" id="lblHasBranch">Purchase Order Date</label>
                            <div class="input-group form-group col-md-12">
                                <input type="datetime"id="JobCaption" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="col-md-6" id="lblHasBranch">Conig</label>
                            <div class="input-group form-group col-md-12">
                                <input type="text" id="JobCaption" class="form-control" />
                            </div>
                        </div>
                    </div>
                    </div>
                <div class="col-md-12">
                    <div class="col-md-6">
                        <div class="col-md-3">
                            <label class="col-md-6" id="lblHasBranch">PO No</label>
                            <div class="input-group form-group col-md-12">
                                <input type="text" id="JobCaption" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="col-md-6" id="lblHasBranch">Shiping Address</label>
                            <div class="input-group form-group col-md-12">
                                <input type="text" id="JobCaption" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="col-md-3">
                            <label class="col-md-6" id="lblHasBranch">Ship Via</label>
                            <div class="input-group form-group col-md-12">
                                <input type="text" id="JobCaption" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="col-md-6" id="lblHasBranch">Store</label>
                            <div class="input-group form-group col-md-12">
                                <input type="text" id="JobCaption" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
            <fieldset> 
                <div class="col-md-6">
                    <label class="idDiSefirst">CATEGORY DETAILS</label>
                    </div>
                    <div class="col-sm-12 col-md-12" style="margin-top: 10px; margin-bottom: 10px;" id="pnlDiSefirst">
                        <div class="row col-sm-12 col-md-12" style="border:1px solid; border-color:#adcceb; width:100%">
                            <div class="row">
                                <div class="col-sm-12 col-md-12" style="padding:1px 18px 1px 18px">
                                    <br />
                                    <table class="table table-bordered table-responsive" id="Add-datatable" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th width="5%" id="tblLevelSL">SL</th>
                                                <th width="10%" id="tblLevelNo">CATEGORY</th>
                                                <th width="10%" id="tblLevelLen">DESCRIPTION</th>
                                                <th width="10%" id="tblLevelDig">AMOUNT&nbsp;(BDT)</th>
                                                <th width="10%" id="tblLevelDig">CUSTOMER</th>
                                                <th width="10%" id="tblLevelDig">CLASS</th>
                                                <th width="5%" id="tblAction">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody id="tbodyId"></tbody>
                                    </table>
                                    <br />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="idDiSelast">ITEM DETAILS</label>
                    </div>

                    <div class="col-sm-12 col-md-12" style="margin-top: 10px; margin-bottom: 10px;" id="pnlDiSelast">
                        <div class="row col-sm-12 col-md-12" style="border:1px solid; border-color:#adcceb; width:100%">
                            <div class="row">
                                <div class="col-sm-12 col-md-12" style="padding:1px 18px 1px 18px">
                                    <br />
                                    <table class="table table-bordered table-responsive" id="Add-datatable" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th width="5%" id="tblLevelSL">SL</th>
                                                <th width="10%" id="tblLevelNo">CATEGORY</th>
                                                <th width="10%" id="tblLevelLen">DESCRIPTION</th>
                                                <th width="10%" id="tblLevelDig">AMOUNT&nbsp;(BDT)</th>
                                                <th width="10%" id="tblLevelDig">CUSTOMER</th>
                                                <th width="10%" id="tblLevelDig">CLASS</th>
                                                <th width="5%" id="tblAction">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody id="tbodyId"></tbody>
                                    </table>
                                    <br />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="col-md-6">
                            <label class="col-md-6" id="lblHasBranch">Your Message to Vendor</label>
                            <div class="input-group form-group col-md-12">
                                <textarea type="textArea" id="JobCaption" class="form-control" value="1% deduction for delay per day"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <label class="col-md-6" id="lblHasBranch">Memo</label>
                            <div class="input-group form-group col-md-12">
                                <textarea type="tel" id="JobCaption" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <span><i class="fa fa-paperclip" style="font-size:15px;color:black;margin-top:2px;position:relative; left:-263px;"></i> </span>
                            <span class="attachprompt" style="left:26px;">Maximum size: 20MB</span>
                            <label class="col-md-6" id="lblHasBranch">Attachments</label>
                            <div class="input-group form-group col-md-12">
                                <input type="file" id="JobCaption" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <p><a href="https://www.google.com">Show existing</a></p>
                            </div>
                        </div>

                    </div>


</fieldset>
        </div>
    </div>
}
