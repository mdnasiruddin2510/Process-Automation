                        <div class="col-md-6">
                            <label class="col-md-3">Type</label>
                            <div class="input-group form-group col-md-8">
                                @Html.DropDownListFor(x => x.G_S, null, "Select Type", new { @class = "form-control select2*", @Value = ViewBag.G_S })
                                @*<select name="G_S" id="G_S" class="form-control col-md-8" style="float:right">

