    <script>$("#G_S").select2()</script>
    <script>$("#Code").select2()</script>
    <script>
        $(document).ready(function () {

            Addindatatable();
            function Addindatatable() {
                var table = $("#Add-datatable").DataTable({
                    "scrollX": true,
                    "scrollY": 200,
                    //"paging": false,
                    "ordering": false,
                    //"info": false,
                    //"searching": false,
                    "ajax": "../StoreGLAc/GetAllDataForStoreGLAc",
                    "columns": [
                               { "data": null, "bSortable": false },
                               { "data": "Accode" },
                               { "data": "AcName" },
                               { "data": "G_S" },


                               {
                                   mRender: function (data, type, row) {
                                       return '<a href="#" class="on-default remove-row deleteSup largeSpace" data-id="1" id="delete" value="' + row.Accode + '">'
                                       + ' <i class="glyphicon glyphicon-trash"></i> </a>'
                                   }
                               },
                    ],
                    "fnCreatedRow": function (row, data, index) {
                        $('td', row).eq(0).html(index + 1);
                    }


                });
            }
            $(document).on("click", "#Accode", function (e) {

                id = $(this).attr('id');
                $("#JobModal").modal("show");

            });

            $(document).on("click", "#closeJob", function (e) {
                e.preventDefault();
                $('#JobModal').modal('hide');
            });

            // $("#SaleNo").on("keydown keyup", function ()
            $(document).on("click", " #btnJobOk", function (e) {
                // AcName = $("#Accode option:selected").val()
                $('#' + id).val($("#Code option:selected").val());
                $("#AcName").html($("#Code option:selected").text());
                //$("#LblHidden").val(datas.DefACId);
                //$("#LblAssAc").html(datas.AssAc);
                $('#JobModal').modal('hide');
                $("#Code").val($('#Code option:first-child').val()).trigger('change.select2');

            });
            /////////////////Save////////////////////////

            var loadInfo = {

                Accode: "",
                G_S: "",
                Action: ""

            };
            function setOrder() {

                loadInfo.Accode = $("#Accode").val();
                loadInfo.G_S = $("#G_S").val();
                //loadInfo.Active = $("#Active").val();


            }

            function clearReceive() {
                // $("#Name").val();
                $("#Accode").val();
                $("#G_S").val($('#G_S option:first-child').val()).trigger('change.select2');


                //$("#BranchType").val($('#BranchType option:first-child').val()).trigger('change.select2');
            }

            $(document).on("click", "#btnadd", function () {
                setOrder();
                var validate = validateOnSave(loadInfo);
                if (validate != "") {
                    alert(validate);
                    return;
                }
                // if (orders != 0) {
                $.ajax({
                    url: '@Url.Action("SaveStoreGLAc", "StoreGLAc")',
                    contentType: "application/json;charset=utf-8",
                    data: JSON.stringify({ StoreGLAc: loadInfo }),
                    type: 'POST',
                    dataType: 'json',
                    success: function (datas) {

                        if (datas == 1) {
                            swal({
                                title: "Ok",
                                text: "Successfully Saved!",
                                type: "success",
                                closeOnConfirm: true

                            },

                            function () {
                                location.reload();
                                clearReceive();
                            });
                            //$("#btnadd").prop("disabled", false);
                            //orders = [];
                            //$('#tbodyId').empty();


                        }
                        else if (datas == "X") {
                            swal({
                                title: "Sorry",
                                text: "No Save Permission for this User",
                                type: "warning"
                            });
                        }
                        else if (datas == 0) {
                            swal(
                                'Sorry!',
                                'All (*) field are required. These Fields can not be empty!!!',
                                'warning'
                            );
                            $("#save").prop("disabled", false);
                        }
                        else if (datas == 2) {                           //save  data
                            swal({
                                title: "Sorry!",
                                text: "Data Already Exists",
                                type: "warning"
                            });
                        }

                            //});

                            //}
                        else {
                            swal(
                                'Sorry!',
                                'Please Add item in the Table.!!!',
                                'warning'
                                );
                        }
                    }//success
                });//ajax
                // }//if (orders != 0) {

            });

            function validateOnSave(validOrder) {

                if (!validOrder.Accode.trim().length) {
                    return "Please select an Account.";
                }
                if (!validOrder.G_S.trim().length) {
                    return "Please select Type.";
                }

                return "";
            }
            /////////////////////////////delete//////////////////////
            $(document).on("click", "#delete", function () {
                var value = $(this).attr("value");
                // GroupTypeId = $("#GroupTypeId option:selected").val()

                $.ajax({
                    url: '@Url.Action("DeleteStoreGLAc", "StoreGLAc")',
                    contentType: "application/json;charset=utf-8",
                    data: { Accode: value },
                    type: 'GET',
                    dataType: 'json',
                    success: function (datas) {

                        if (datas == 0 || datas == 2) {
                            swal("Sorry!! Failed to delete this data.", "fail");
                        }
                        else if (datas == 1) {
                            swal({
                                title: "Ok",
                                text: "Sucessfully Delete!",
                                type: "success",
                                closeOnConfirm: true

                            }, function () {
                                //clearReceive();
                                // loadGroupWiseData();
                                location.reload();
                            });
                        }
                        else if (datas == 3) {
                            swal({
                                title: "Are you sure?",
                                text: "Used in Inventory Journal. Do you sure to remove?",
                                type: "warning",
                                showCancelButton: true,
                                confirmButtonColor: "#DD6B55",
                                confirmButtonText: "Yes, delete it!",
                                closeOnConfirm: false,
                                closeOnCancel: true
                            },
                             function () {

                             });
                        }
                        else if (datas == "D") {

                            swal({
                                title: "Sorry",
                                text: "No Delete Permission for this User",
                                type: "warning"
                            });
                        }
                    },
                    error: function (datas) {
                        swal("Sorry!! Failed to delete this data.", "fail")
                    }
                });
                //});
            });

        });//ready function
    </script>}