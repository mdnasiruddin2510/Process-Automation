<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="JobModal" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-color panel-primary">
                        <div class="panel-heading">
                            <h3 class="panel-title">Accounts</h3>

                        </div>
                        <div class="panel-body">
                            <div class="clearfix">
                            </div>
                            <div class="col-md-12">
                                <label class="col-md-3">Account Name</label>
                                <div class="input-group form-group col-md-7">
                                    @Html.DropDownListFor(x => x.Code, null, "Search Account", new { @class = "form-control select2*", @Value = ViewBag.Code })
                                </div>
                            </div>
                            <div class="col-md-10">
                                <div>
                                    <div class="pull-right">
                                        <input type="button" id="btnJobOk" value="OK" class="btn btn-primary" />
                                        <input type="button" id="closeJob" value="Close" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
