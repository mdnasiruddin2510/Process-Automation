@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-color panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <text style="text-align:left !important;text-decoration:none;" id="Title">Project Info Setting</text>
                    </h3>
                </div>

                <fieldset>
                    <div class="col-md-12" style="margin-top: 10px !important;">
                        <div class="col-md-6">
                            <label class="col-md-3" id="lblProjCode">Project Code</label>
                            <div class="input-group form-group col-md-8">
                                <input type="text" id="ProjCode" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="col-md-3" id="lblProjName">Project Name</label>
                            <div class="input-group form-group col-md-8">
                                <input type="text" id="ProjName" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <label class="col-md-3" id="lblProjLocalName">Project Local Name</label>
                            <div class="input-group form-group col-md-8">
                               @* @Html.DropDownListFor(x => x.AcCode, null, "Select", new { @class = "form-control select2*", @Value = ViewBag.AcCode })*@
                                @*@Html.TextBoxFor(x => x.LocCode, new { @class = "form-control" })*@
                                <input type="text" id="ProjLocalName" class="form-control" /> 
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="col-md-3" id="lblProjDescrip">Project Description</label>
                            <div class="input-group form-group col-md-8">
                                <input type="text" id="ProjDescrip" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <label class="col-md-3" id="lblProjInitial">Project Initial</label>
                            <div class="input-group form-group col-md-8">
                                <input type="text" id="ProjInitial" class="form-control" />
                                @*@Html.TextBoxFor(x => x.LocCode, new { @class = "form-control" })*@
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="col-md-3" id="MRADesc">Auto Voucher No</label>
                            <div class="input-group form-group col-md-8">
                              
                                <select name="AutoVouNo" id="AutoVouNo" class="form-control col-md-8" style="float:right">

                                    <option value="">Select</option>
                                    <option value="True">True </option>
                                    <option value="False">False</option>
                                  
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12" style="text-align:end">
                        <input type="button" value="SAVE" class="btn btn-primary" id="btnadd" style="width:100px; margin-right:47px" />
                        <input type="button" value="UPDATE" class="btn btn-primary" id="btnupdate" style="width:100px; margin-right:47px" />
                    </div>
                    <div class="col-sm-12 col-md-12" style="margin-top: 10px; margin-bottom: 10px;" id="pnlDT">
                        <div class="row col-sm-12 col-md-12" style="border:1px solid; border-color:#adcceb; width:100%">
                            <div class="row">
                                <div class="col-sm-12 col-md-12" style="padding:1px 18px 1px 18px">
                                    <br />
                                    <table class="table table-bordered table-responsive" id="Add-datatable" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th width="5%" id="Sl">SL</th>
                                                <th class="hideme">ProjID</th>
                                                <th width="5%" id="tblProjCode">Project&nbsp;Code</th>
                                                <th width="5%" id="tblProjName">Project&nbsp;Name</th>
                                                <th width="5%" id="tblProjLocName">Project&nbsp;Local&nbsp;Name</th>
                                                <th width="5%" id="tblProjDes">Project&nbsp;Description</th>
                                                <th width="5%" id="tblProjInitial">Project&nbsp;Initial</th>
                                                <th width="5%" id="tblAutoVouNo">Auto&nbsp;Voucher&nbsp;No</th>
                                                <th width="5%" id="ProjAction">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody id="tbodyId"></tbody>
                                    </table>
                                    <br />
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
}

