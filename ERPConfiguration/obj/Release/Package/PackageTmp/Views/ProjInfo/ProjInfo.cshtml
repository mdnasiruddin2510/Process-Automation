                url: '@Url.Action("UpdateProjInfo", "ProjInfo")',
                contentType: "application/json;charset=utf-8",
                data: JSON.stringify({ ProjInfo: loadInfo, ID: ID }),
                type: 'POST',
                dataType: 'json',
                success: function (datas) {
                    if (datas == 1) {


                        swal({
                            title: "Ok",
                            text: "Successfully Updated!",
                            type: "success",
                            closeOnConfirm: true
                        },

                        function () {
                            location.reload();
                            clearReceive();
                            //loadGroupWiseData();
                        });

                    }

                    else if (datas == "X") {
                        swal({
                            title: "Sorry",
