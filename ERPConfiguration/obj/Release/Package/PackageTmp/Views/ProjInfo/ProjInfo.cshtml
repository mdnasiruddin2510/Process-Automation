        ///////////////////////////Edit//////////////////

        $(document).on('click', "#edit", function () {
            var value = $(this).attr("value");
            ID = value;
            //GroupTypeId = $("#GroupTypeId option:selected").val()
            //$("#update").show();
            $.ajax({
                url: '@Url.Action("ProjInfoforEdit", "ProjInfo")',
                contentType: "application/json;charset=utf-8",
                data: JSON.stringify({ ProjID: value }),
                type: 'POST',
                dataType: 'json',
                success: function (datas) {
                    //GroupTypeId = GroupTypeId;

                    $("#ProjCode").val(datas.ProjCode);
                    $("#ProjName").val(datas.ProjName);
                    $("#ProjLocalName").val(datas.ProjLocalName);
                    $("#ProjDescrip").val(datas.ProjDescrip);
                    $("#ProjInitial").val(datas.ProjInitial);
                    //$("#AutoVouNo").val(datas.AutoVouNo);
                    $("#AutoVouNo").val(datas.AutoVouNo).trigger('change.select2');
                    $("#btnupdate").show();
                    $("#btnadd").hide();
                    //$("#Type").val($('#Type option:first-child').val()).trigger('change.select2');
                }
            });
        });
        ////////////////////////Update//////////////////////////////////
        $(document).on("click", "#btnupdate", function () {
            //  ActionCtrl = $("#AcName").val();         
