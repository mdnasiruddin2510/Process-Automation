        function validateOnSave(validOrder) {

            if (!validOrder.ProjCode.trim().length) {
                return "Please write a Project Code.";
            }
            if (!validOrder.ProjName.trim().length) {
                return "Please write a Project Name.";
            }
            if (!validOrder.ProjLocalName.trim().length) {
                return "Please write a Local  Name..";
            }
            if (!validOrder.ProjDescrip.trim().length) {
                return "Please write a Description.";
            } if (!validOrder.ProjInitial.trim().length) {
                return "Please write a Description.";
            }
            if (!validOrder.AutoVouNo.trim().length) {
                return "Please write a Local  Name.";
            }
            return "";

        }
       
