        var loadInfo = {
            ProjCode: "",
            ProjName: "",
            ProjLocalName: "",
            ProjDescrip: "",
            ProjInitial: "",
            AutoVouNo: ""
        };
        function setOrder() {
            loadInfo.ProjCode = $("#ProjCode").val();
            loadInfo.ProjName = $("#ProjName").val();
            loadInfo.ProjLocalName = $("#ProjLocalName").val();
            loadInfo.ProjDescrip = $("#ProjDescrip").val();
            loadInfo.ProjInitial = $("#ProjInitial").val();
            loadInfo.AutoVouNo = $("#AutoVouNo").val();


        }

        function clearReceive() {
            $("#ProjCode").val("");
            $("#ProjName").val("");
            $("#ProjLocalName").val("");
            $("#ProjDescrip").val("");
            $("#ProjInitial").val("");
            //$("#AutoVouNo").val("");
            $("#AutoVouNo").val($('#AutoVouNo option:first-child').val()).trigger('change.select2');
        }

        /////////////////Save////////////////////////
        $(document).on("click", "#btnadd", function () {
            setOrder();
            var validate = validateOnSave(loadInfo);
            if (validate != "") {
                alert(validate);
                return;
            }
            // if (orders != 0) {
            $.ajax({
                url: '@Url.Action("SaveProjInfo", "ProjInfo")',
                contentType: "application/json;charset=utf-8",
                data: JSON.stringify({ ProjCode: loadInfo }),
                type: 'POST',
                dataType: 'json',
                success: function (datas) {
                    if (datas == 1) {
                        swal({
                            title: "Ok",
                            text: "Successfully Saved!",
                            type: "success",
                            closeOnConfirm: true
                        },

                        function () {
                            location.reload();
                            clearReceive();
                        });
                        //$("#btnadd").prop("disabled", false);
                        //orders = [];
                        //$('#tbodyId').empty();


                    }
                    else if (datas == "X") {
                        swal({
                            title: "Sorry",
                            text: "No Save Permission for this User",
                            type: "warning"
                        });
                    }
                    else if (datas == 0) {
                        swal(
                            'Sorry!',
                            'All (*) field are required. These Fields can not be empty!!!',
                            'warning'
                        );
                        $("#save").prop("disabled", false);
                    }
                    else if (datas == 2) {                           //save  data
                        swal({
                            title: "Sorry!",
                            text: "Data Already Exists",
                            type: "warning"
                        });
                    }

                        //});

                        //}
                    else {
                        swal(
                            'Sorry!',
                            'Please Add item in the Table.!!!',
