@model App.Domain.ViewModel.DeliveryVModel

<div class="modal fade" id="Addmodal" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Delivery Report</h4>
            </div>
            <div class="modal-body form-horizontal ">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row" id="rptshow">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    <div class="form-group">
                                        @Html.LabelFor(x => x.DeliveryOffice, new { @class = "col-md-3 control-label" })
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(x => x.DeliveryOffice, new { @class = "form-control col-md-4", required = "required", @readonly = "readonly" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(x => x.DeliveryDate, new { @class = "col-md-3 control-label" })
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(x => x.DeliveryDate, null, new { @class = "form-control col-md-4 datepicker", @readonly = "readonly" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(x => x.DocumentNo, new { @class = "col-md-3 control-label" })
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(x => x.DocumentNo, new { @class = "form-control col-md-4", required = "required", @readonly = "readonly" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(x => x.CodAmount, new { @class = "col-md-3 control-label" })
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(x => x.CodAmount, new { @class = "form-control col-md-4", required = "required", @readonly = "readonly", @type = "number" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(x => x.ReceiverName, new { @class = "col-md-3 control-label" })
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(x => x.ReceiverName, new { @class = "form-control col-md-4", required = "required", @readonly = "readonly" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(x => x.SignaturePath, new { @class = "col-md-3 control-label" })
                                        <div class="col-sm-6">
                                            @{
                                                string source = "~/Signatures/" + Model.SignaturePath;
                                            }
                                            <img src="~/Signatures/@Model.SignaturePath" style="height:100px;width:300px;" />
                                        </div>
                                    </div>
                                    <div class="form-group" id="reasond">
                                        @Html.LabelFor(x => x.Reason, new { @class = "col-md-3 control-label" })
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(x => x.Reason, new { @class = "form-control col-md-4", @readonly = "readonly" })
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-1"></div>
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect " data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>

</div>