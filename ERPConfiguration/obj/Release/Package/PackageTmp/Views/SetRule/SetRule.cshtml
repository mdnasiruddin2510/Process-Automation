    <script src="../App_Themes/Theme1/plugins/datatables/dataTables.responsive.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/responsive.bootstrap.min.js"></script>
    <script src="../App_Themes/Theme1/plugins/datatables/dataTables.scroller.min.js"></script>
    <script type="text/javascript" src="../App_Themes/Theme1/plugins/parsleyjs/dist/parsley.min.js"></script>
    <script src="../App_Themes/Theme1/blue/assets/pages/datatables.init.js"></script>
    <script>
        $(document).ready(function () {
            var RuleID;
            $("#btnupdate").hide();
            $("#btnadd").show();
            Addindatatable();
            function Addindatatable()
            {
                var table = $("#Add-datatable").DataTable({
                    "scrollX": true,
                    "scrollY": 300,
                    //"paging": false,
                    "ordering": false,
                    //"info": false,
                    //"searching": false,
                    "ajax": "../SetRule/GetAllDataForSetRule",
                    "columns": [
                               { "data": null, "bSortable": false },
                               { "data": "MonthsLowerLimit" },
                               { "data": "MonthsUpperLimit" },
                                { "data": "OwnContrPerc" },
                                { "data": "OrgContrPerc" },
                                  { "data": "RulesMsgText" },
                                 { "data": "OwnProfitPerc" },
                                { "data": "OrgProfitPerc" },
                               
                               {
                                   mRender: function (data, type, row) {
                                       return '<a href="#" id="edit"  value="' + row.RuleID + '">'
                                               + '<span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>&ensp;'
                                       + '<a href="#" class="on-default remove-row deleteSup largeSpace" data-id="1" id="delete" value="' + row.RuleID + '">'
                                       + ' <i class="glyphicon glyphicon-trash"></i> </a>'
                                   }
                               },
                    ],
                    "fnCreatedRow": function (row, data, index) {
                        $('td', row).eq(0).html(index + 1);
                    }


                });
            }
            function clearItemInfo() {

                $("#MonthsLowerLimit").val("");
                $("#MonthsUpperLimit").val("");
                $("#OwnContrPerc").val("");
               
                $("#OrgContrPerc").val("");
                $("#RulesMsgText").val("");
                $("#OwnProfitPerc").val("");
                $("#OrgProfitPerc").val("");
               
            }
            function validateOnSave(validOrder) {

                if (!validOrder.MonthsLowerLimit.trim().length) {
                    return "Please write a Lower Limit.";
                }
                if (!validOrder.MonthsUpperLimit.trim().length) {
                    return "Please write a Upper Limit.";
                }
                if (!validOrder.OwnContrPerc.trim().length) {
                    return "Please write a Owner Contr. Percentage.";
                }
                //if (!validOrder.MonthsUpperLimitBN.trim().length) {
                //    return "Please write a Company Name.";
                //}
                if (!validOrder.OrgContrPerc.trim().length) {
                    return "Please write First  Org Contr. Percentage.";
                }
                //if (!validOrder.RulesMsgText.trim().length) {
                //    return "Please write Second Address.";
                //}
                //if (!validOrder.OwnProfitPerc.trim().length) {
                //    return "Please write a Address BN.";
                //}
                if (!validOrder.OrgProfitPerc.trim().length) {
                    return "Please write a Organization Profit Percentage.";
                }
              
                return "";
            }
            ///////////Save data//////////////
            var loadInfo = {
                MonthsLowerLimit: "",
                MonthsUpperLimit: "",
                OwnContrPerc: "",
               
                OrgContrPerc: "",
                RulesMsgText: "",
                OwnProfitPerc: "",
                OrgProfitPerc: "",
             
            };
            function setOrder() {
                loadInfo.MonthsLowerLimit = $("#MonthsLowerLimit").val();
                loadInfo.MonthsUpperLimit = $("#MonthsUpperLimit").val();
                loadInfo.OwnContrPerc = $("#OwnContrPerc").val();
                
                loadInfo.OrgContrPerc = $("#OrgContrPerc").val();
                loadInfo.RulesMsgText = $("#RulesMsgText").val();
                loadInfo.OwnProfitPerc = $("#OwnProfitPerc").val();
                loadInfo.OrgProfitPerc = $("#OrgProfitPerc").val();
               
            }

            $(document).on("click", "#btnadd", function () {
                setOrder();
                var validate = validateOnSave(loadInfo);
                if (validate != "") {
                    alert(validate);
                    return;
                }
                //  if (orders != 0) {
                $.ajax({
                    url: '@Url.Action("SaveSetRule", "SetRule")',
                    contentType: "application/json;charset=utf-8",
                    data: JSON.stringify({ SetRule: loadInfo }),
                    type: 'POST',
                    dataType: 'json',
                    success: function (datas) {
                        if (datas == 1) {
                            swal({
                                title: "Ok",
                                text: "Successfully Saved!",
                                type: "success",
                                closeOnConfirm: true
                            },

                            function () {
                                location.reload();
                                clearItemInfo();
                            });

                        }
                        else if (datas == "X") {
                            swal({
                                title: "Sorry",
                                text: "No Save Permission for this User",
                                type: "warning"
                            });
                        }
                        else if (datas == 0) {
                            swal(
                                'Sorry!',
                                'All (*) field are required. These Fields can not be Empty!!!',
                                'warning'
                            );
                            $("#save").prop("disabled", false);
                        }
                        else if (data == 2) {                           //save  data
                            swal({
                                title: "Sorry!",
                                text: "Data Already Exists",
                                type: "warning"
                            });
                        }

                            //});

                            //}
                        else {
                            swal(
                                'Sorry!',
                                'Please Add item in the Table.!!!',
                                'warning'
                                );
                        }
                    }//success
                });//ajax
                //}//if (orders != 0) {

            });
            /////////////////////////////delete//////////////////////
            $(document).on("click", "#delete", function () {
                var value = $(this).attr("value");
                // GroupTypeId = $("#GroupTypeId option:selected").val()
                swal({
                    title: "Are you sure?",
                    text: "You will not be able to recover this data!",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
                    confirmButtonText: "Yes, delete it!",
                    closeOnConfirm: false,
                    closeOnCancel: true
                },
                    function () {
                        $.ajax({
                            url: '@Url.Action("DeleteSetRule", "SetRule")',
                            contentType: "application/json;charset=utf-8",
                            data: { RuleID: value },
                            type: 'GET',
                            dataType: 'json',
                            success: function (datas) {

                                if (datas == 0 || datas == 2) {
                                    swal("Sorry!! Failed to delete this data.", "fail");
                                }
                                else if (datas == 1) {
                                    swal({
                                        title: "Ok",
                                        text: "Sucessfully Delete!",
                                        type: "success",
                                        closeOnConfirm: true

                                    }, function () {
                                        //clearReceive();
                                        // loadGroupWiseData();
                                        location.reload();
                                    });
                                }
                                else if (datas == "D") {

                                    swal({
                                        title: "Sorry",
                                        text: "No Delete Permission for this User",
                                        type: "warning"
                                    });
                                }
                            },
                            error: function (datas) {
                                swal("Sorry!! Failed to delete this data.", "fail")
                            }
                        });
                    });
            });
            ///////////////////////////Edit//////////////////

            $(document).on('click', "#edit", function () {
                var value = $(this).attr("value");
                RuleID = value;
                //GroupTypeId = $("#GroupTypeId option:selected").val()
                //$("#update").show();
                $.ajax({
                    url: '@Url.Action("SetRuleforEdit", "SetRule")',
                    contentType: "application/json;charset=utf-8",
                    data: JSON.stringify({ RuleID: value }),
                    type: 'POST',
                    dataType: 'json',
                    success: function (datas) {
                        //GroupTypeId = GroupTypeId;

                        $("#MonthsLowerLimit").val(datas.MonthsLowerLimit);
                        $("#MonthsUpperLimit").val(datas.MonthsUpperLimit);
                        $("#OwnContrPerc").val(datas.OwnContrPerc);
                       
                        $("#OrgContrPerc").val(datas.OrgContrPerc);
                        $("#RulesMsgText").val(datas.RulesMsgText);
                        $("#OwnProfitPerc").val(datas.OwnProfitPerc);
                        $("#OrgProfitPerc").val(datas.OrgProfitPerc);
                       
                        $("#btnupdate").show();
                        $("#btnadd").hide();
                        //$("#Type").val($('#Type option:first-child').val()).trigger('change.select2');
                    }
                });
            });
            ////////////////////////Update//////////////////////////////////
            $(document).on("click", "#btnupdate", function () {
                //  ActionCtrl = $("#AcName").val();         
                //SrcDestName = $("#SrcDestName").val();  
                // $("#btnupdate").hide();
                //$("#btnadd").show();

                setOrder();
                //var validate = validateOnSave(loadInfo);
                //if (validate != "") {
                //    alert(validate);
                //    return;
                //}
                // if (orders != 0) {
                $.ajax({
                    url: '@Url.Action("UpdateSetRule", "SetRule")',
                    contentType: "application/json;charset=utf-8",
                    data: JSON.stringify({ SetRule: loadInfo, RuleID: RuleID }),
                    type: 'POST',
                    dataType: 'json',
                    success: function (datas) {
                        if (datas == 1) {


                            swal({
                                title: "Ok",
                                text: "Successfully Updated!",
                                type: "success",
                                closeOnConfirm: true
                            },

                            function () {
                                location.reload();
                                clearReceive();
                                //loadGroupWiseData();
                            });

                        }

                        else if (datas == "X") {
                            swal({
                                title: "Sorry",
                                text: "No Save Permission for this User",
                                type: "warning"
                            });
                        }
                        else if (datas == 0) {
                            swal(
                                'Sorry!',
                                'All (*) field are required. These Fields can not be Empty!!!',
                                'warning'
                            );
                            $("#save").prop("disabled", false);
                        }
                        else if (datas == 2) {                           //save  data
                            swal({
                                title: "Sorry!",
                                text: "Data Already Exists",
                                type: "warning"
                            });
                        }

                            //});

                            //}
                        else {
                            swal(
                                'Sorry!',
                                'Please Add item in the Table.!!!',
                                'warning'
                                );
                        }
                    }//success
                });//ajax
                //}//if (orders != 0) {

            });
        });//ready function
    </script>
}
