@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-color panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <text style="text-align:left !important;text-decoration:none;">Settlement Rule</text>
                    </h3>
                </div>
                <fieldset>
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <label class="col-md-3">Month's Lower Limit</label>
                            <div class="input-group form-group col-md-8">
                                <input type="text" id="MonthsLowerLimit" class="form-control" />
                                @*@Html.TextBoxFor(x => x.LocCode, new { @class = "form-control" })*@
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="col-md-3">Month's Upper Limit</label>
                            <div class="input-group form-group col-md-8">
                                <input type="text" id="MonthsUpperLimit" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <label class="col-md-3">Owner Contribution Percentage</label>
                            <div class="input-group form-group col-md-8">
                                <input type="text" id="OwnContrPerc" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="col-md-3">Organization Contribution Percentage</label>
                            <div class="input-group form-group col-md-8">
                                <input type="text" id="OrgContrPerc" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <label class="col-md-3">Rules for Text Messages</label>
                            <div class="input-group form-group col-md-8">
                                <input type="text" id="RulesMsgText" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="col-md-3">Owner's Profit Percentage</label>
                            <div class="input-group form-group col-md-8">
                                <input type="text" id="OwnProfitPerc" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <label class="col-md-3">Organization Profit Percentage</label>
                            <div class="input-group form-group col-md-8">
                                <input type="text" id="OrgProfitPerc" class="form-control" />
                            </div>
                        </div>                      
                    </div>
                   
                    <div class="col-md-12" style="text-align:end">
                        <input type="button" value="SAVE" class="btn btn-primary" id="btnadd" style="width:100px; margin-right:47px" />
                        <input type="button" value="UPDATE" class="btn btn-primary" id="btnupdate" style="width:100px; margin-right:47px" />
                    </div>
                    <div class="col-sm-12 col-md-12" style="margin-top: 10px; margin-bottom: 10px;">
                        <div class="row col-sm-12 col-md-12" style="border:1px solid; border-color:#adcceb; width:100%">
                            <div class="row">
                                <div class="col-sm-12 col-md-12" style="padding:1px 18px 1px 18px">
                                    <br />
                                    <table class="table table-bordered table-responsive" id="Add-datatable" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th width="5%">Id</th>                                                
                                                <th width="5%">Month's&nbsp;Lower&nbsp;Limit</th>
                                                <th width="5%">Owner&nbsp;Upper&nbsp;Limit</th>
                                                <th width="5%">Owner&nbsp;Contribution&nbsp;Percentage</th>
                                                <th width="5%">Organization&nbsp;Contribution&nbsp;Percentage</th>
                                                <th width="5%">Rules&nbsp;for&nbsp;Text&nbsp;Messages</th>
                                                <th width="5%">Owner's&nbsp;Profit&nbsp;Percentage</th>
                                                <th width="5%">Organization&nbsp;Profit&nbsp;Percentage</th>
                                                <th width="5%">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody id="tbodyId"></tbody>
                                    </table>
                                    <br />
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
}

@section scripts {
    <script src="~/App_Themes/Theme1/plugins/select2/select2.min.js" type="text/javascript"></script>
    <script src="~/App_Themes/Theme1/plugins/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
