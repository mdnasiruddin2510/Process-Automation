<div id="toReport" class="panel-body" style="margin: auto; text-align:center !important; width:800px; height:1150px; padding:60px">
    <div class="panel-heading" style="text-align:center">
        @*<div class="panel-title">
            <label style="text-align:center !important; text-decoration: none; font-size:25px; font-weight:bold">@CompInfo.LocCode</label><br>
            <label style="text-align:center !important; text-decoration: none; font-size:23px; font-weight:normal">LocName: @CompanyAddress</label><br>
            <label style="text-align:center !important; text-decoration: none; font-size:23px; font-weight:normal">LocationType: @CompInfo.Tel</label><br>
        </div>*@
        <br />
        <div class="panel-title">
            <text style="text-align:center !important; text-decoration: none; font-size:20px; font-weight:bold">@ViewBag.Title</text>
        </div>

    </div>
    <hr />
    <br />

    <div class="panel-body" style="text-align:center">
        <table cellpadding="5" cellspacing="1" border="0" style="width:800px">
            <thead style="height:300px">
                <tr>
                    <th style="width:80px; text-align:center">Sl</th>
                    <th style="width:100px; text-align:left">Location Code</th>
                    <th style="width:120px; text-align:left">Location Name</th>
                    @*<th style="width:230px; text-align:left">Branch Type</th>*@
                    
                </tr>
                <tr>
                    <th style="width:80px; text-align:center"></th>
                    <th style="width:100px; text-align:left"></th>
                    <th style="width:120px; text-align:left"></th>
                    @*<th style="width:230px; text-align:left"></th>*@
                    
                </tr>

            </thead>
            <tbody id="tbodyId">

                @foreach (var item in Model)
                {
                    sl++;

                    if (item.LocCode == item.LocCode)
                    {
                        item.LocCode = " ";
                    }
                    else
                    {
                        item.LocCode = item.LocCode;
                    }

                    <tr>
                        <td style="width:80px; text-align:center">
                            @sl
                        </td>
                        <td style="width:100px; text-align:left">
                            @Html.DisplayFor(modelItem => item.LocCode)
                        </td>
                        <td style="width:120px; text-align:left">
                            @Html.DisplayFor(modelItem => item.LocName)
                        </td>
                        @*<td style="width:230px; text-align:left">
                            @Html.DisplayFor(modelItem => item.BranchType)
                        </td>*@
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
